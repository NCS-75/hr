<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hr_leave_view_form" model="ir.ui.view">
        <field name="name">Leave Request - Add full day + hide nยบ of days + show related readonly</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <field name="date_from" position="before">
                <field name="from_full_day" nolabel="1" class="oe_inline"/>
                <label for="from_full_day" string="Full day" class="oe_inline"/>
                -
                <field name="to_full_day" nolabel="1" class="oe_inline"/>
                <label for="to_full_day" string="Full day" class="oe_inline"/>
                <br/>
                <field name="date_from_full" required="1" attrs="{'invisible': [('from_full_day', '=', False)]}" class="oe_inline"/>
            </field>
            <field name="date_from" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="attrs">{'invisible': [('from_full_day', '=', True)]}</attribute>
            </field>
            <field name="date_to" position="before">
                <field name="date_to_full" required="1" attrs="{'invisible': [('to_full_day', '=', False)]}" class="oe_inline"/>
            </field>
            <field name="date_to" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="attrs">{'invisible': [('to_full_day', '=', True)]}</attribute>
            </field>
            <field name="number_of_days" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="number_of_days" position="after">
                <field name="number_of_days_related" readonly="1"/>
            </field>
        </field>
    </record>

    <record id="hr_leave_view_form_manager" model="ir.ui.view">
        <field name="name">Leave Request - # of days editable for manager</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_leave_view_form" />
        <field name="groups_id" eval="[(4, ref('hr_holidays.group_hr_holidays_manager'))]"/>
        <field name="arch" type="xml">
            <field name="number_of_days" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
            <field name="number_of_days_related" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

</odoo>
